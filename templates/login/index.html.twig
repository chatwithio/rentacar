{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="is-size-1">Login</h1>

    <form action="{{ path('app_login') }}" method="post">
        <label class="label" for="username">Email:</label>
        <input class="input" type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label class="label" for="password">Password:</label>
        <input class="input" type="password" id="password" name="_password"/>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="button is-primary mt-3" type="submit">Login</button>
    </form>
{% endblock %}
